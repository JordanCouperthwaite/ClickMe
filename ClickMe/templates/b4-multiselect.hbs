<div class="form-group{{#if required}} has-feedback{{/if}}">
    <label for="{{name}}" class="col-sm-3 control-label">{{caption}}</label>
    <div class="col-sm-9">
        <select class="form-control az-multiselect" id="{{name}}" name="{{name}}" multiple="multiple">
            {{#each items}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
        </select>
        {{#if required}}
        <i class="fa fa-asterisk form-control-feedback"></i>
        {{/if}}
    </div>
</div>