<div class="form-group{{#if required}} has-feedback{{/if}}">
    <label for="{{name}}" class="col-sm-3 control-label">{{caption}}</label>
    <div class="col-sm-9">
        <div class="input-group">
            <span class="input-group-addon">{{#if currency}}{{currency}}{{else}}GBP{{/if}}</span>
            <input type="text" class="form-control az-money" id="{{name}}" name="{{name}}" value="{{value}}" placeholder="{{placeholder}}" />
            <span class="input-group-addon">.00</span>
            {{#if required}}
            <i class="fa fa-asterisk form-control-feedback"></i>
            {{/if}}
        </div>
    </div>
</div>