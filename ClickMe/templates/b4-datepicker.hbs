<div class="form-group{{#if required}} has-feedback{{/if}}">
    <label for="{{name}}" class="col-sm-3 control-label">{{caption}}</label>
    <div class="col-sm-9">
        <div class="input-group date">
            <input type="text" class="form-control b4-datepicker" id="{{name}}" name="{{name}}" value="{{value}}" placeholder="{{placeholder}}" readonly />
            <span class="input-group-addon">
                <span class="las la-calendar"></span>
            </span>
            {{#if required}}
            <i class="fa fa-asterisk form-control-feedback"></i>
            {{/if}}
        </div>
    </div>
</div>