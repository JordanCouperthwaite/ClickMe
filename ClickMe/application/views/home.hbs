{{#b4-page name="HomePage"}}
<div class="row header-buttons">
  <div class="col">
    <div class="row h-100 production-schedule-heading">
      <div class="col">
        {{> b4-select  name="action" colLabel="col-sm-3" colInput="col-sm-9" items=actions placeholder="Bulk Edit"}}
      </div>
      <div class="col">
        {{> b4-select caption="Filter by" name="filter" colLabel="col-sm-3" colInput="col-sm-9" items=filters}}
      </div> 
    </div>
  </div>
  <div class="col" style="padding-right: 50px;">
      <button id="syncjobs" type="button" class="btn btn-default float-right" style="color: black;">Sync New BC Jobs</button>
  </div>
</div>
<div class="row">
  {{>b4-grid name="productiongrid"}}
</div>


{{#b4-modal name="ScheduleDayModal" buttonCaption="Add"}}
  {{#b4-form name="ScheduleDayForm"}}
    <h6>Please select the day you'd like to schedule the selected Jobs for:</h6>
    <div class="input-group date" style="padding-top:6px;">
        <input type="text" style="border-radius:16px;" class="form-control scheduledday-datepicker" id="ScheduleDay" name="ScheduleDay"/>
        <span style="position:absolute; right:8px;top:14px;font-size:23px;" class="la la-calendar"></span>
    </div>
  {{/b4-form}}
{{/b4-modal}}

{{#b4-modal name="PhaseJobModal" large=true buttonCaption="Add"}}
  {{#b4-form name="PhaseJobForm"}}
    {{> b4-grid name="phasegrid" }}
  {{/b4-form}}
{{/b4-modal}}

{{/b4-page}}