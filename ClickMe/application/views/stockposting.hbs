{{#b4-page name="StockPostingPage"}}
<div class="row header-buttons">
  <div class="col">
    <div class="row h-100 production-schedule-heading">
      <div class="col">
        {{> b4-select  name="action" colLabel="col-sm-3" colInput="col-sm-9" items=actions placeholder="Bulk Edit"}}
      </div>
      <div class="col">
        {{> b4-select caption="Filter by" name="filter" colLabel="col-sm-3" colInput="col-sm-9" items=filters}}
      </div> 
    </div>
  </div>
  <div class="col" style="padding-right: 50px;">
      <button id="syncjobs" type="button" class="btn btn-default float-right" style="color: black;">Sync Scales Stock</button>
      <input style='float: right; margin-right: 20px; margin-top: 6px;' placeholder="Search By ItemCode" id="search-itemcode">
  </div>
</div>

<nav>
  <div class="row daily-schedule-heading">
    <div class="col-sm-7">
      <div class="row h-100">
          <div class="col text-center daily-schedule-day">
            <div class="row h-100">
              <div class="col-sm-12 my-auto">
                <a class="nav-item nav-link active" id="nav-to-post-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true"><span id='to-post-text' class='tab-header-text underline'>To Post</span></a>
              </div>
            </div>
          </div>
          <div class="col text-center daily-schedule-day">
            <div class="row h-100">
              <div class="col-sm-12 my-auto">
                <a class="nav-item nav-link" id="nav-completed-posting-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false"><span id='completed-posting-text' class='tab-header-text'>Completed Postings</span></a>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</nav>

